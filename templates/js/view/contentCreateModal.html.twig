<form action="">
    <div class="form-group row">
        <label for="titleCreate" class="col-sm-2 col-form-label">Titre</label>
        <div class="col-sm-10">
          <input type="text"class="form-control" id="titleCreate" value="{{article.title is defined  ? article.title : ''}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="authorCreate" class="col-sm-2 col-form-label">Autheur</label>
        <div class="col-sm-10">
          <input type="text"class="form-control" id="authorCreate" value="{{article.author is defined  ? article.author : ''}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="dateCreate" class="col-sm-2 col-form-label">Date de publication</label>
        <div class="col-sm-10">
          <input type="date"class="form-control" id="dateCreate" value="{{article.datePublished is defined  ? article.datePublished|date("Y-m-d") : ''}}">
        </div>
    </div>
    <div class="mb-3">
        <label for="validationTextarea">Contenu</label>
        <textarea class="form-control" id="contentCreate" placeholder="{{article.content is defined  ? article.content : ''}}"></textarea>
    </div>

</form>